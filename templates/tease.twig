<a href="{{ item.link }}" target="{{ item.link.target}}" class="tease tease-{{ item.post_type }} noline">
	<div class="card bg-greenlightest" data-mh>
		<div class="image-holder ratio-4x3 mb-0 overflow-hidden">
			<div class="image" style="background-image: url({{ Image(item.thumbnail).src }})"></div>
		</div>
		<div class="card-body d-flex align-items-start flex-column">
			<h3 class="h4 mb-2">{{ item.title }}</h3>
			<p>{{ item.samenvatting }}	</p>	
			<div class="mt-auto w-100">
				<div class="row d-flex align-items-center">
					<div class="col"> {{ item.date }} </div>
					<div class="col-auto"> <span class="badge bg-greenlight">{{ item.terms('artikelen_themas')|first }}</span></div>
				</div>
			</div>
		</div>
	</div>
</a>