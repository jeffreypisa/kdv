<a href="{{ item.link }}" target="{{ item.link.target}}" class="tease tease-prime tease-{{ item.post_type }} noline">
	<div class="card" data-mh>
		<div class="image-holder mb-0 overflow-hidden">
			<div class="image" style="background-image: url({{ Image(item.thumbnail).src }})"></div>
		</div>
		<div class="card-body d-flex align-items-start flex-column text-white text-lg" data-mh>
			<h3 class="h4 mb-2">{{ item.title }}</h3>
			
			{% set catid = item.terms('artikelen_themas')|first.id %}
			
			<p> {{ item.samenvatting }} </p>
			<div class="mt-auto w-100">
				<div class="row">
					<div class="col"> {{ item.date }} </div>
					<div class="col-auto"> 
						<span class="badge bg-greenlight">{{ get_parent_cat(catid, 'artikelen_themas') }} </span>
					</div>
				</div>
			</div>
		</div>
	</div>
</a>