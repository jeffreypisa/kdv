<section class="strook-stappen {{ item.achtergrond }}">
	{% if item.kleur_afronding_links_boven %}
		<svg class="corner-rounded-top-left" width="154" height="156" viewBox="0 0 154 156" fill="none" xmlns="http://www.w3.org/2000/svg">
			<path d="M-2.12696 155.541L-2.12695 0L153.414 6.79891e-06C67.5111 3.04397e-06 -2.12696 69.638 -2.12696 155.541Z" fill="{{ item.kleur_afronding_links_boven }}"/>
		</svg>
	{% endif %}
	
	{% if item.kleur_afronding_links_onder %}
		<svg class="corner-rounded-bottom-left" width="156" height="156" viewBox="0 0 156 156" fill="none" xmlns="http://www.w3.org/2000/svg">
		<path d="M-0.0781318 0.084137L-0.078125 155.625L155.463 155.625C69.5599 155.625 -0.078128 85.987 -0.0781318 0.084137Z" fill="{{ item.kleur_afronding_links_onder }}"/>
		</svg>
	{% endif %}

	<div class="container">
		<div class="row">
			<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
				<div class="text-center">
					{% if item.titel %}
						<h2 class="mb-5"> {{ item.titel }}</h2>
					{% endif %}
					{% if item.tekst %}
						<p>{{ item.tekst }}</p>
						<br><br>
					{% endif %}
				</div>
			</div>
		</div>
		<div class="row g-5">
			<div class="col-xl-8">
				<div class="stappenpad mb-4">
					<img src="{{ theme.link }}/assets/img/stappenpad.svg" class="w-100 h-auto d-none d-lg-block" alt="stappenpad">
					{% if item.dots %}
						{% for dot in item.dots %}
							<div class="dot{{ loop.index }}">
								<div class="d-md-none">
									<img src="{{ theme.link }}/assets/img/stappen_icon_{{ loop.index }}.svg" class="m-auto mb-4" alt="stap">
								</div>
								<div class="row g-2">
									<div class="col-auto {% if loop.index == 3 %}order-lg-last{% endif %} d-none d-lg-block">
										<div class="h2 text-greendark">{{ loop.index }}.</div>
									</div>
									<div class="col">
										<h4 class="mb-1"> <span class="d-lg-none">{{ loop.index }}.</span> {{ dot.titel }} </h4>
										{{ dot.tekst }}
									</div>
								</div>
								<img src="{{ theme.link }}/assets/img/lijn.svg" alt="lijn" class="mb-3 d-lg-none">
							</div>
						{% endfor %}
					{% endif %}
				</div>
				<div class="tekst-onder-stappen text-center">
					{% if item.onder_stappen_titel %}
						<h3 class="text-greendark">{{ item.onder_stappen_titel }}</h3>
					{% endif %}
					
					{{ item.onder_stappen_tekst }}
				</div>
			</div>
			<div class="col-xl-4">
				<div class="card bg-lilalight mb-30">
					<div class="card-body">
						<h3 class="d-block text-center mt-3 mb-2"> {{ item.coaches_titel }}</h3>
						<div class="p-4">
							<div class="slick-slider-coaches">
								{% for coach in item.coaches %}
									<div class="coach-block">
										<div class="m-auto" style="max-width: 400px">
											{% if coach.afbeelding %}
												<div class="image" style="background-image: url('{{ Image(coach.afbeelding).src }}');"></div>
											{% endif %}
											{% if coach.naam %}
												<h4 class="text-white d-block text-center mb-4">{{ coach.naam }}</h4>
											{% endif %}
											<div class="text-dark">
											{% if coach.tekst %}
												{{ coach.tekst }}
											{% endif %}
											</div>
											<div class="text-greendark">
												<strong>
												{% if coach.contact %}
													{{ coach.contact }}
												{% endif %}
												</strong>
											</div>
										</div>
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>