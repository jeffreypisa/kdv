<section id="section{{ sectionno }}" class="mod-content {{ item.achtergrond }}">
	<div class="container">
		<div class="row">
			<div class="col-md-10 offset-md-1 col-xl-8 offset-xl-2 text-center">
				{% if item.subtitel %}
					<h6 class="sub mb-2"> {{ item.subtitel }} </h6>
				{% endif %}
				{% if item.titel %}
					<h2 class="mb-5"> {{ item.titel }} </h2>
				{% endif %}
				{% if item.tekst %}
					<p> {{ item.tekst }} </p>
				{% endif %}
			</div>
		</div>
		
		{% if item.kolom %}
			<div class="row g-md-5">
				
				{% set col = 12 / item.kolom|length %}
				
				{% for kolom in item.kolom %}
					<div class="col-lg-{{ col }}">
						<div class="kolom {{ kolom.achtergrond }} {% if kolom.achtergrond != 'bg-transparent' %}p-4 {% endif %}">
							<div data-mh>
								{% if kolom.titel %}
									<h3 class="mb-2 text-greendark {% if kolom.achtergrond != 'bg-transparent' %}h4{% endif %}""> {{ kolom.titel }} </h3>
								{% endif %}
								{% if kolom.tekst %}
									<div class="pb-2">
										{{ kolom.tekst }}
										<div class="clearfix"></div>
									</div>
									
								{% endif %}
								{% if kolom.toon_ubn_check %}
									<form id="ubncheckform">
										<label class="form-label mb-2" for="ubn">UBN Nummer:</label>
										<div class="row g-2">
											<div class="col">
												<input class="form-control mb-2" type="text" id="ubn" name="ubn">
											</div>
											<div class="col-auto">
												<input id="submitbutton" class="btn btn-primary" type="submit" value="Opvragen">
											</div>
										</div>
									</form>
									<div id="ubnoutput"></div>
								{% endif %}
								
								
								{% if kolom.icoon %}
									<br>
									<div class="row g-md-5">
									{% for image in kolom.icoon %}
										<div class="col-6 col-sm text-center">
											<img src="{{ Image(image) }}" alt="{{ p.alt }}" /> 
										</div>
									{% endfor %} 
									</div>
								{% endif %}
								{% if kolom.sliderblok %}
									<div class="card bg-greylight">
										<div class="card-body p-4">
											<div class="js-slick-sliderblok">
												{% for slide in kolom.sliderblok %}
													<div class="item text-center">
														{% if slide.subtitel %}
															<p class="date"> {{ slide.subtitel }} </p>
														{% endif %}
														{% if slide.titel %}
															<h5 class="text-greendark mt-0"> {{ slide.titel }} </h5>
														{% endif %}
														{% if slide.tekst %}
															{{ slide.tekst }}
														{% endif %}
													</div>
												{% endfor %}
											</div>
										</div>
									</div>
								{% endif %}
							</div>
							{% if kolom.link %}
								<a class="btn btn-primary mb-5" href="{{ kolom.link.url }}" target="{{ kolom.link.target }}">{{ kolom.link.title }}</a>
							{% endif %}
							{% if kolom.download %}
								<a class="btn btn-primary mb-5" href="{{ kolom.download.url }}" target="{{ kolom.download.target }}"><i class="fas fa-download"></i> {{ kolom.download.title }} </a>
							{% endif %}
						</div>
					</div>
				{% endfor %}
				
			</div>
		{% endif %}
    </div>
</section>