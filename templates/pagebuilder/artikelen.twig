<section id="section{{ sectionno }}" class="mod-artikelen bg-white {% if item.uitgebreide_weergave %}uitgebreide_weergave{% endif %}">
	<div class="container-fluid container-lg">
		<div class="row">
			<div class="col-md-10">
				{% if item.subtitel %}
					<h6 class="sub mb-1"> {{ item.subtitel }} </h6>
				{% endif %}
				{% if item.titel %}
					<h2 class="mb-5"> {{ item.titel }} </h2>
				{% endif %}
			</div>
		</div>
		<div class="d-none mb-4">
			<div class="row d-flex align-items-center">
				<div class="col-auto">
					<div class="form-select-holder">
						<select class="form-select" onchange="document.location.href = this.value">
							<option disabled selected> {{ item.themas_selecteer }} </option>
							{% for item in themas %}
								<option value="{{ item.link }}">{{ item.title }}</option>
							{% endfor %}
						</select>
					</div>
				</div>
				<div class="col-auto d-none d-sm-block">
					{% if item.link %}
						<a class="btn-link" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
					{% endif %}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-8 mb-30">
				{% if artikelen|length > 1 %}
					{% for item in artikelen|slice(0,1) %}
						{% include 'tease-prime.twig' %}
					{% endfor %}
				{% endif %}
			</div>
			<div class="col-lg-4 mb-30">
				<div class="card bg-yellow mb-0" data-mh>
					<div class="body p-4">
						<h3 class="h4 mb-2"> {{ item.slider_titel }}</h3>	
						<p class="mb-1"> {{ item.slider_tekst }} </p>	
					</div>
					{% if item.slider %}
						<div class="slider-wrapper js-slick-centered-slider">
							{% for item in item.slider %}
								<div class="slide">
									<a href="{{ item.link.url }}" class="publicatie">
										<div class="img">
											<img src="{{ Image(item.afbeelding).url }}" alt="{{ Image(item.afbeelding).title }}" class="w-100 h-auto">
										</div>
										<div class="titel">{{ item.link.title }}</div>
									</a>
								</div>
							{% endfor %}
						</div>
					{% endif %}
						<!--
						<h3 class="h4 mb-3"> {{ item.themas_titel }}</h3>				
						{% for item in themas %}
							<div class="w-100">
								<a href="{{ item.link }}" class="btn btn-light mb-1">{{ item.title }}</a>
							</div>
						{% endfor %}	
						{% if item.bekijk_alle_themas %}
							<a class="btn-link btn-link-next" href="{{ item.bekijk_alle_themas.url }}" target="{{ item.bekijk_alle_themas.target }}">{{ item.bekijk_alle_themas.title }}</a>
						{% endif %}	
						-->
				</div>
			</div>
		</div>
		{% if artikelen|length > 1 %}
			<div class="row">
				{% for item in artikelen|slice(1,4) %}
					<div class="col-md-6 col-lg-4 mb-30 {% if loop.index == 3 %}d-none d-md-block{% endif %} {% if loop.index == 4 %}d-none d-md-block d-lg-none{% endif %}">
						{% include 'tease.twig' %}
					</div>
				{% endfor %}
			</div>
		{% endif %}
		{% if item.link %}
			<div class="text-center">
				<br>
				<a class="btn btn-primary" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
			</div>
		{% endif %}
	</div>
</section>